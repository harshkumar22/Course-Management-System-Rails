<h1>Welcome to Sign Up Page</h1>

<%= form_with model: @user do |form| %>
    <table>
        <tr>
            <td><%= form.label :uname, "Enter Your Name: " %></td>
            <td><%= form.text_field :uname %></td>
        </tr>
        <tr>
            <td><%= form.label :email, "Enter Your Email: " %></td>
            <td><%= form.email_field :email %></td>
        </tr>
        <tr>
            <td><%= form.label :password, "Enter Your Password: " %></td>
            <td><%= form.password_field :password %></td>
        </tr>
        <tr>
            <td><%= form.label :contact, "Enter Your Contact: " %></td>
            <td><%= form.text_field :contact %></td>
        </tr>
        <tr><td><%= form.submit "Create Account" %></td></tr>
    </table>
<% end %>